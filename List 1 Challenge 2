cars = []

addName = True
while addName == True:
  
  newCar = str(input("Enter a car brand or press x to exit"))

if newCar == "x":
  print("exiting..")
  addName = False

else:
  cars.append(newCar)
  
print("In the list =", cars)

cars = []

cars.append(input("Enter car1 >>>"))
cars.append(input("Enter car2 >>>"))
cars.append(input("Enter car3 >>>"))
print(cars)
